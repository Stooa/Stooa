{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/jitsi/*": ["lib/jitsi-modules/*"],
      "@/lib/*": ["lib/*"],
      "@/graphql/*": ["lib/gql/*"],
      "@/pages/*": ["pages/*"],
      "@/components/*": ["components/*"],
      "@/types/*": ["types/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types/*", "./*.d.ts", "./types/*"]
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/Jitsi/index.jsx"]
}
