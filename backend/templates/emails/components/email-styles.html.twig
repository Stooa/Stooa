<style type="text/css">
@-ms-viewport { width: device-width; }
#outlook a { padding: 0; }

* {
    mso-line-height-rule: exactly;
    -webkit-font-smoothing: antialiased;
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
    -moz-hyphens: none;
    -ms-hyphens: none;
    -webkit-hyphens: none;
    hyphens: none;
    word-break: keep-all;
}

body, html {
    height: 100%;
    margin: 0 !important;
    padding: 0 !important;
    width: 100% !important;
}

table {
    border-spacing: 0;
    mso-table-lspace: 0;
    mso-table-rspace: 0;
}

p, div {
    margin: 0;
    padding: 0;
}

body,
.ReadMsgBody,
.ExternalClass { width: 100% !important }
.ExternalClass * { line-height: 110% }

body, ul, li {
    -webkit-text-size-adjust: none;
    -ms-text-size-adjust: none;
    padding: 0px;
    margin: 0px
}

p {
    margin: 0 !important;
    padding: 0 !important;
}

body {
    background-color: {{ emailConfig.background.content }};
    color: {{ emailConfig.font.color }};
    font-family: {{ emailConfig.font.family }};
    min-width: 100% !important;
}

img {
    display: block;
    border:0;
    height: auto;
    outline:none;
    text-decoration:none;
    -ms-interpolation-mode:bicubic;
}

a, a:link, a:visited, a:hover {
    color: {{ emailConfig.link.color }};
    text-decoration: none;
}

.fixlink a,
.fixlink a:link,
.fixlink a:visited,
.fixlink a:hover {
    color: inherit !important;
    text-decoration: none !important;
}

/* Apple fix */
a[x-apple-data-detectors] {
    color: inherit !important;
    text-decoration: none !important;
    font-size: inherit !important;
    font-family: inherit !important;
    font-weight: inherit !important;
    line-height: inherit !important;
}

@media screen and (max-device-width:599px), screen and (max-width:599px) {
    .w100pc {
        width: 100% !important;
        max-width: 1000px !important;
        height: auto !important;
    }
}

@media screen and (max-device-width: 479px), screen and (max-width: 479px) {
    .fullwidth {
        width: 100% !important;
    }

    th.fullwidth,
    td.fullwidth {
        display: block !important;
        background-color: transparent;
    }
}

/* Apple Mail does not support max-width */
@media screen and (min-width: 480px) {
    .col200 {
        max-width: 200px !important;
        width: 100%;
    }
}
</style>
